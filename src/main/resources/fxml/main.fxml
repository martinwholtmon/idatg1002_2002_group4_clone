               <font>
                  <Font size="15.0"/>
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#openTabCreate" prefHeight="35.0" prefWidth="100.0" text="Create"
                    textAlignment="CENTER" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="15.0"/>
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#openTabSearch" prefHeight="35.0" prefWidth="100.0" text="Search"
